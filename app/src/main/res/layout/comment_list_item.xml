<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_item_message_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:border_color="#FF000000"
        app:border_width="0dp"
        app:placeholderImage="@drawable/mine"
        app:roundAsCircle="true"/>

    <TextView
        android:id="@+id/comment_item_message_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="laoluo"
        android:textColor="@color/gray_45"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/comment_item_message_text_content"
        style="@style/text_item_message_content"
        android:layout_below="@id/comment_item_message_nickname"
        android:gravity="center_vertical"
        android:text="hehehe"
        />

    <TextView
        android:id="@+id/comment_item_message_time"
        style="@style/text_item_message_time"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="1.1.11."
        />

    <View
        style="@style/view_item_message_divider"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/comment_item_message_text_content"
        android:layout_marginTop="20dp"/>

</RelativeLayout>