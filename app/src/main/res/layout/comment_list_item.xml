<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_item_message_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/mine"
        app:border_color="#FF000000"
        app:border_width="0dp"/>

    <TextView
        android:id="@+id/comment_item_message_nickname"
        style="@style/text_item_message_nickname"
        android:text="laoluo"
        />

    <TextView
        android:id="@+id/comment_item_message_text_content"
        style="@style/text_item_message_content"
        android:layout_below="@id/comment_item_message_nickname"
        android:text="hehehe"
        />

    <TextView
        android:id="@+id/comment_item_message_time"
        style="@style/text_item_message_time"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="1.1.11."
        />

    <View
        style="@style/view_item_message_divider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>