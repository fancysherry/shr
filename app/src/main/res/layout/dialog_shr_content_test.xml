<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shrdialog_corner"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_shr_content_exit"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_launcher"/>

        </LinearLayout>

    <TextView
        android:id="@+id/dialog_shr_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Motion 新视界 qzone 5.0 大片诞生记 哦哦哦哦哦哦哦哦哦"
        android:textColor="@android:color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/dialog_shr_content_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/pure_white"
        android:hint="说点什么"
        android:padding="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_shr_content_togroup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="投递到"
            android:textColor="@color/black_overlay"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/user_groups_tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_information_introduce_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">


            <unique.fancysherry.shr.ui.widget.TagGroup
                android:id="@+id/user_groups_tagGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:atg_horizontalSpacing="15dp"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
