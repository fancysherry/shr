<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/pure_white"
              android:paddingBottom="15dp"
              android:paddingLeft="12dp"
              android:paddingRight="20dp"
              android:paddingTop="12dp">

    <RelativeLayout
        android:id="@+id/share_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="155dp">

        <ImageView
            android:id="@+id/share_list_item_share_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@color/gray_87"/>

        <TextView
            android:id="@+id/share_list_item_share_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/share_list_item_share_icon"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textColor="#333333"
            android:textSize="20sp"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/share_list_item_user_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/share_list_item_share_icon"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/mine"
            tools:border_color="#FF000000"
            tools:border_width="0dp"/>


        <TextView
            android:id="@+id/share_list_item_user_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/share_list_item_user_portrait"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/share_list_item_user_portrait"
            android:text="棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒棒"
            android:textColor="#a0a0a0"
            android:textSize="15sp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/share_list_item_share_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:background="@drawable/ic_launcher"
                />

            <TextView
                android:id="@+id/share_list_item_share_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:text="郭唱、吴兵分享过"
                android:textColor="#c0c0c0"
                android:textSize="13sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/share_list_item_comment_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_launcher"
                />


            <TextView
                android:id="@+id/share_list_item_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="15"
                android:textColor="#c0c0c0"
                android:textSize="13sp"
                />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
