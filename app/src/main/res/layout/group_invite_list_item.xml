<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="15dp"
                android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_invite_item_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/mine"
        tools:border_color="#FF000000"
        tools:border_width="0dp"/>


    <TextView
        android:id="@+id/group_invite_item_email"
        android:layout_width="wrap_content"
        android:text="21342424@wew.ds"
        android:layout_toRightOf="@id/group_invite_item_portrait"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_97"
        android:textSize="27px"

        />


    <TextView
        android:id="@+id/group_invite_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_invite_item_email"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/group_invite_item_portrait"
        android:layout_marginTop="5dp"
        android:text="2012年2月2号"
        android:textColor="@color/gray_97"
        android:textSize="20px"
        />

    <Button
        android:id="@+id/cancel_invite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/gray_d8_20"
        android:text="取消邀请"
        android:padding="5dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />





</RelativeLayout>
