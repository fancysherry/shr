<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/pure_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="unique.fancysherry.shr.ui.activity.LoginActivity">


    <LinearLayout
        android:id="@+id/login_logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_luachpage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/share_text" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@color/pure_white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <EditText

            android:id="@+id/login_username"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@color/pure_white"
            android:gravity="center_vertical"
            android:paddingLeft="75dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="用户名"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#eeeeee" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:background="@color/pure_white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <EditText

            android:id="@+id/login_password"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="75dp"
            android:password="true"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="密码"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#eeeeee" />
    </FrameLayout>


    <Button
        android:id="@+id/login_activity_login_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_button_corner"
        android:text="登陆"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/pure_white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/login_activity_forget_password_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:text="忘记密码?"
        android:textColor="#c2c2c2"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/login_activity_register_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:text="注册"
            android:textColor="#46C4D0"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
