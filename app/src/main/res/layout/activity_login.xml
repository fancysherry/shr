<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@color/pure_white"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context="unique.fancysherry.shr.ui.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_luachpage"/>

        <!--<ImageView-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src=""/>-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_edittext_layout"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        >

        <EditText

            android:id="@+id/login_username"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="#eeeeee"
            android:gravity="center_vertical"
            android:hint="username"
            android:paddingLeft="25dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_user_grey"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_edittext_layout"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        >

        <EditText

            android:id="@+id/login_password"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="#eeeeee"
            android:gravity="center_vertical"
            android:hint="password"
            android:paddingLeft="25dp"
            android:password="true"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_pwd_grey"
            />
    </FrameLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_button_corner"
        android:text="登陆"
        android:textColor="@color/pure_white"
        android:textSize="17sp"/>


</LinearLayout>
