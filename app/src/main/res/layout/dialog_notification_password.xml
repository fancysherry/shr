<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shrdialog_corner"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/dialog_notification_password_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:text="修改密码"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_notification_password_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:gravity="center_vertical"
            android:textSize="18sp"/>



        <EditText
            android:id="@+id/dialog_notification_password_old_input"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:background="@drawable/edittext_normal"
            android:gravity="center_vertical"
            android:password="true"
            android:textSize="18sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_notification_password_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:gravity="center_vertical"
            android:textSize="18sp"/>



        <EditText
            android:id="@+id/dialog_notification_password_new_input"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:background="@drawable/edittext_normal"
            android:gravity="center_vertical"
            android:password="true"
            android:textSize="18sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_notification_password_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="取消"
            android:background="@drawable/tagview_corner"
            android:textColor="@color/pure_white"
            android:textSize="18sp"/>



        <TextView
            android:id="@+id/dialog_notification_password_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="确定"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tagview_corner"
            android:textColor="@color/pure_white"
            android:textSize="18sp"/>


    </LinearLayout>

</LinearLayout>

