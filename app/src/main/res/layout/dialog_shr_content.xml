<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shrdialog_corner"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_shr_content_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_close" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_shr_content_title"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dialog_shr_content_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_while_no_corner"
        android:hint="说点什么"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/dialog_shr_content_togroup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="投递到"
            android:textColor="@color/black_overlay"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/user_groups_tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_information_introduce_layout"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">


            <unique.fancysherry.shr.ui.widget.TagGroup
                android:id="@+id/user_groups_tagGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="7dp"
                app:atg_horizontalSpacing="15dp"
                app:atg_verticalSpacing="8dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>

