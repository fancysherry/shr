<unique.fancysherry.shr.ui.widget.ScrimInsetsRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#eeeeee"
    android:clickable="true"
    android:elevation="16dp"
    android:fitsSystemWindows="true"
    custom:insetForeground="#4000">

    <RelativeLayout
        android:id="@+id/drawer_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#83b6b8">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/drawer_header_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="54dp"
            custom:border_color="#FFFFFF"
            custom:border_width="2dp"
            custom:placeholderImage="@drawable/mine"
            custom:roundAsCircle="true" />

        <TextView
            android:id="@+id/drawer_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawer_header_portrait"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/pure_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/drawer_header_gratitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawer_header_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="   感谢"
            android:textColor="@color/pure_white"
            android:textSize="13sp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/drawer_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header"
        android:background="@color/pure_white"
        android:minHeight="@dimen/drawer_item_height"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/drawer_item_horizontal_padding"
        android:paddingLeft="25dp"
        android:paddingStart="@dimen/drawer_item_horizontal_padding"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/drawer_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/message"
            android:textColor="@color/drawer_item_tint_color"
            android:textSize="15sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/drawer_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_message"
        android:layout_marginTop="1px"
        android:background="@color/pure_white"
        android:minHeight="@dimen/drawer_item_height"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/drawer_item_horizontal_padding"
        android:paddingLeft="25dp"
        android:paddingStart="@dimen/drawer_item_horizontal_padding">


        <TextView
            android:id="@+id/drawer_at_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/at_me"
            android:textColor="@color/drawer_item_tint_color"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_at"
        android:layout_marginTop="1px"
        android:background="@color/pure_white"
        android:minHeight="@dimen/drawer_item_height"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/drawer_item_horizontal_padding"
        android:paddingLeft="25dp"
        android:paddingStart="@dimen/drawer_item_horizontal_padding">


        <TextView
            android:id="@+id/drawer_daily_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="日报"
            android:textColor="@color/drawer_item_tint_color"
            android:textSize="15sp" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout_drawer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/drawer_daily"
        android:layout_marginTop="1px"
        android:background="@color/pure_white"
        android:paddingTop="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="15dp"
            android:clipToPadding="false"
            android:dividerHeight="0dp"
            android:drawSelectorOnTop="true"
            android:listSelector="?android:selectableItemBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/drawer_add_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加组"
                        android:textColor="#c2c2c2"
                        android:textSize="17sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/drawer_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pure_white"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:textColor="#c2c2c2"
                        android:textSize="17sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</unique.fancysherry.shr.ui.widget.ScrimInsetsRelativeLayout>
